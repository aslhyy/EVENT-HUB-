{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "pkg-config", "mysql80"]
        },
        "install": {
          "cmds": ["pip install -r requirements/prod.txt"]
        },
        "build": {
          "cmds": ["python manage.py collectstatic --noinput"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && gunicorn config.wsgi --bind 0.0.0.0:$PORT --workers 4",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}